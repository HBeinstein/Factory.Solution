@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>

<h1>All engineers:</h1>

@if(@Model.Count == 0)
{
  <h3>There are no engineers in the system right now.</h3>
}
else
{
  <ul>
    @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.Name}", "Show", new { id = engineer.EngineerId })</li>
    }
  </ul>  
}

<p>@Html.ActionLink("Add new engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>